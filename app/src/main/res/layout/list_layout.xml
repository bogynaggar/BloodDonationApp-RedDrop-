<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/donerName"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_toStartOf="@+id/certified"
        android:text="TextView"
        android:textColor="@color/dark_grey"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/donerNum"
        app:layout_constraintEnd_toStartOf="@+id/certified"
        app:layout_constraintStart_toEndOf="@+id/bloodGroup"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/donerNum"
        android:layout_width="246dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/donerName"
        android:layout_marginStart="2dp"
        android:text="TextView"
        android:textColor="@android:color/holo_blue_light"
        app:layout_constraintEnd_toStartOf="@+id/certified"
        app:layout_constraintStart_toEndOf="@+id/bloodGroup"
        app:layout_constraintTop_toBottomOf="@+id/donerName" />

    <ImageView
        android:id="@+id/certified"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/donerName"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/bloodGroup"
        android:layout_width="60dp"
        android:layout_height="68dp"
        android:layout_marginEnd="2dp"
        android:text="a+"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/donerName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>